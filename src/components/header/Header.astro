---
import Logo from './Logo.astro';
import MainMenu from './MainMenu.astro';
import ActionMenu from './ActionMenu.astro';
import MobileMenuWrapper from './MobileMenuWrapper.tsx';
import client from '../../lib/wp';
import type { MenuItem, ActionItem } from '../../types';

const mainMenuQuery = `
  query {
    siteSettings {
      acfOptionsHeader {
        mainMenu {
          menuItem {
            title
            url
          }
          submenu {
            link {
              title
              url
            }
          }
        }
        actionMenu {
          menuItem {
            title
            url
          }
        }
      }
    }
  }
`;

const data = await client.request<{ 
  siteSettings: { 
    acfOptionsHeader: { 
      mainMenu: MenuItem[];
      actionMenu: ActionItem[];
    } 
  } 
}>(mainMenuQuery);

const menu = data.siteSettings.acfOptionsHeader.mainMenu;
const actionItems = data.siteSettings.acfOptionsHeader.actionMenu;
---

<header class="fixed top-0 left-0 w-full z-[100] bg-white px-4 py-4 border-b border-slate-100 isolate">
  <div class="container mx-auto flex justify-between items-center">
    <Logo />

    <!-- Desktop nav -->
    <div class="hidden md:flex items-center gap-10">
      <MainMenu menu={menu} />
    </div>
    <div class="hidden md:flex items-center gap-10">
    <ActionMenu menu={actionItems} />
  </div>
    <!-- Mobile menu toggle -->
    <div class="md:hidden">
      <MobileMenuWrapper client:load menu={menu} actionItems={actionItems} />
    </div>
  </div>
</header>
